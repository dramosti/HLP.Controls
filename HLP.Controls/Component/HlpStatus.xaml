                                <RowDefinition></RowDefinition>
                            </Grid.RowDefinitions>
                            <Border x:Name="border" Background="White" BorderThickness="1" CornerRadius="20" BorderBrush="#FF626262" Margin="-0.672,0,0.672,0">
                                <Grid>
                                    <Path x:Name="path" Width="18" Height="18" Stretch="Fill" Fill="#FF626262" Data="F1 M 23.7501,33.25L 34.8334,44.3333L 52.2499,22.1668L 56.9999,26.9168L 34.8334,53.8333L 19.0001,38L 23.7501,33.25 Z "/>
